<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MetronomeActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="#ff000000"
        android:orientation="vertical">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:textSize="50px"
        android:textColor="#FFFFFF"
        android:text="@string/tempo_marking"
            android:layout_gravity="center_horizontal" />

        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:textSize="50px"
	        android:textColor="#FFFFFF"
	        android:id="@+id/tempo"
            android:layout_marginLeft="10dp" />

        <SeekBar
	        android:id="@+id/slider"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
	        android:layout_margin="10px"/>

        <TextView
            android:id="@+id/beats_per_measure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:text="@string/time_signature"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_horizontal"/>
	
	        
		    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="60px"
	        android:gravity="center"
	        android:orientation="horizontal" >
	        
 
				<ImageView
			    android:layout_height="wrap_content"
			    android:layout_gravity="center"
			    android:layout_width="wrap_content"
			    android:src="@drawable/right_arrow"
			    android:onClick="downMeasure" />
				
				<TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:textSize="40px"
		        android:layout_marginLeft="20px"
		        android:textColor="#FFFFFF"
		        android:id="@+id/measure"
			    android:text="4"/>
				
				<ImageView
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    android:layout_gravity="center"
			    android:layout_marginLeft="20px"
			    android:src="@drawable/left_arrow"
			    android:onClick="upMeasure" />
				
			</LinearLayout>
	
	   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60px"
		android:gravity="center"
        android:orientation="horizontal" >
				
		   
		    <Button
		        android:id="@+id/stop"
		        android:layout_width="100dp"
		        android:layout_height="wrap_content"
		        android:onClick="stop"
		        android:background="@drawable/button"
		        android:textColor="#FFFFFF"
		        android:textStyle="bold"
		        android:text="@string/stop" />
		    
		     <Button
		        android:id="@+id/start"
		        android:layout_width="100dp" 
		        android:layout_height="wrap_content"
		        android:onClick="start"
		        android:layout_marginLeft="30px"
		        android:background="@drawable/button"
		        android:textColor="#FFFFFF"
		        android:textStyle="bold"
		        android:text="@string/start" />

              <Button
               android:id="@+id/increment"
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:onClick="increment"
               android:layout_marginLeft="30px"
               android:background="@drawable/button"
               android:textColor="#FFFFFF"
               android:textStyle="bold"
               android:text="@string/title_activity_incrementor" />
		     
	    </LinearLayout>
	
    </LinearLayout>

</LinearLayout>
