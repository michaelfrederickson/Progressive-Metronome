<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MetronomeActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="#ff000000"
        android:orientation="vertical">

        <TextView
            android:id="@+id/count_in_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:textSize="40dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:text="@string/count_in_prompt"
            android:layout_gravity="left"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="2dp"/>

            <EditText
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/countdown_edit_text"
                android:layout_gravity="center_horizontal"
                android:hint="0"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/start_increment"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:background="@drawable/button"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="@string/start_increment"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="0dp"
                android:onClick="startIncrementSection"
                />

        </LinearLayout>

    </LinearLayout>



